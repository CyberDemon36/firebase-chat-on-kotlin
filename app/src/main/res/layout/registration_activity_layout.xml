<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="100dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:id="@+id/avatar_imageview"
        android:layout_marginTop="15dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="select photo"
        android:id="@+id/btn_avatar_selecter"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_registration_input"
        android:inputType="textEmailAddress"
        android:hint="Enter nickname"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_registration_input"
        android:inputType="textEmailAddress"
        android:hint="Enter your email"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/password_registration_input"
        android:hint="Enter your password"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/repeat_password_registration_input"
        android:hint="Repeat password"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign_in"
        android:text="@string/registration_btn"
        />
</LinearLayout>